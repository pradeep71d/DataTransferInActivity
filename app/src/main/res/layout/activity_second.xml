    <ImageView
        android:layout_gravity="center"
        android:id="@+id/i2"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>

    <ImageView
        android:id="@+id/i3"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>

    <ImageView
        android:layout_gravity="center"
